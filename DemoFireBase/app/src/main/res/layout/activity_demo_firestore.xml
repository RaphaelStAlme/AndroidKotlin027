<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DemoFirestoreActivity">
    <EditText
        android:id="@+id/et_nom_sandwich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Nom du sandwich"
        />
    <EditText
        android:id="@+id/et_prix_sandwich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_nom_sandwich"
        android:hint="Prix du sandwich"
        />
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_prix_sandwich"
        android:text="Enregistrer"
        />
    <Button
        android:id="@+id/btn_afficher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_save"
        android:text="Afficher"
        />

    <TextView
        android:id="@+id/tv_sandwichs"
        app:layout_constraintTop_toBottomOf="@id/btn_afficher"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F8F3F3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>