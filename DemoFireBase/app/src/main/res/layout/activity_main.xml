<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_authentification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Authentification"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#D50000"
        />

    <Button
        android:id="@+id/btn_firestore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firestore"
        app:layout_constraintTop_toBottomOf="@id/btn_authentification"
        android:backgroundTint="#00C853"
        />

    <Button
        android:id="@+id/btn_realtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realtime Database"
        app:layout_constraintTop_toBottomOf="@id/btn_firestore"
        android:backgroundTint="#2962FF"
        />

    <Button
        android:id="@+id/btn_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Storage"
        app:layout_constraintTop_toBottomOf="@id/btn_realtime"
        android:backgroundTint="#FFD600"
        android:textColor="@color/black"
        />




</androidx.constraintlayout.widget.ConstraintLayout>