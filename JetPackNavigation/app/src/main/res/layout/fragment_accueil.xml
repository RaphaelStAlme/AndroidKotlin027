<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccueilFragment">

    <Button
        android:id="@+id/btn_vers_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:backgroundTint="#FF7F00"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_vers_bleu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bleu"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/btn_vers_orange"
        />

    <Button
        android:id="@+id/btn_vers_rouge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rouge"
        android:backgroundTint="#F44336"
        app:layout_constraintTop_toBottomOf="@id/btn_vers_bleu"
        />

</androidx.constraintlayout.widget.ConstraintLayout>